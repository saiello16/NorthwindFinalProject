@model IEnumerable<CartItem>
<h2 class="mt-3"><i class="far fa-address-card"></i> Shopping Cart</h2>

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (CartItem item in Model)
                {
                    <tr>
                        <td>@item.Product.ProductName</td>
                        <td>$@item.Product.UnitPrice.ToString("F2")</td>
                        <td>@item.Quantity</td>
                        <td>$@((item.Product.UnitPrice * item.Quantity).ToString("F2"))</td>
                        <td>
                             <form asp-action="UpdateQuantity" method="post">
                                <input type="hidden" name="id" value="@item.CartItemId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" style="width: 70px; display: inline-block;" />
                                <button type="submit" class="btn btn-primary btn-sm">Update</button>
                            </form>
                        </td>
                        <td>
                            <form asp-action="Remove" asp-route-id="@item.CartItemId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Cart Summary</h4>
                <p class="card-text">Number of items: @Model.Count()</p>
                <p class="card-text">Total: $<span id="cartTotal">@Model.Sum(i => i.Product.UnitPrice * i.Quantity).ToString("F2")</span></p>
                <div class="form-group">
                    <label for="discountCode">Discount Code</label>
                    <input type="text" id="discountCode" class="form-control" />
                    <button id="applyDiscount" class="btn btn-secondary mt-2">Apply Discount</button>
                </div>
                 <form asp-action="Checkout" asp-controller="Cart" method="post">
                    <button type="submit" class="btn btn-primary float-right m-3">Checkout</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="../../product.js"></script>
    <script src="../../discount.js"></script>